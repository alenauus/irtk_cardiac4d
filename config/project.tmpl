LOCAL_INCLUDES  = 
LOCAL_LIBRARIES =

OBJS    := $(patsubst %.c,%.o,$(wildcard *.c)) \
	   $(patsubst %.cc,%.o,$(wildcard *.cc))
SRCS    := $(wildcard *.c) $(wildcard *.cc)
HEADERS := $(wildcard *.h)

# Default rules
#
# DO NOT EDIT !!!

%.o: %.c 
	$(CC) -c $(CXXFLAGS) $(CFLAGS) $(INCLUDES) $(LOCAL_INCLUDES) $< -o $@

%.o: %.cc 
	$(CXX) -c $(CXXFLAGS) $(CFLAGS) $(INCLUDES) $(LOCAL_INCLUDES) $< -o $@


